<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<h3>profile.ejs</h3>
    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/" class="border-shadow">
                    <span class="text-gradient">HOME <i class="fas fa-user"></i></span>
                </a>
            </div>

            <div class="filter">
                <!-- logout form -->
                <%- include('include/_formLogout') %>
            </div>


            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <!-- <th>id</th> -->
                        <th>UserName</th>
                        <th>Birthday</th>
                        <th>Mob.</th>
                        <th>Address</th>                        
                        <th>City</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                         <!-- form handling -->
                        <form class="form" method="" id="profile">
                            <input type="hidden" name="id" value="<%= user._id %>"> <!--do not put td not to make displacement-->
                            <td><input type="text" name="username" value="<%= user.username %>" placeholder="username"></td>
                            <td><input type="datetime" name="birthday" value="<%= user.birthday %>" placeholder="birthday"></td>
                            <td><input type="tel" name="mobile" value="<%= user.mobile %>" placeholder="mobile"></td>
                            <td><input type="text" name="address" value="<%= user.address %>" placeholder="address"></td>
                            <td><input type="text" name="city" value="<%= user.city %>" placeholder="city"></td>

                            <thead class="thead-dark">
                                <tr>
                                    <th>Gender</th>
                                    <th>@Email</th>
                                    <th>PassWord</th>
                                    <th>isAdmin</th>
                                </tr>
                            </thead>


                            <td>
                                <div class="">
                                    <label for="radio-1" class="radio-label">male</label>
                                    <input type="radio" id="radio-1" name="gender" value="Male"  <%= user.gender == "Male" ? 'checked' :'' %> >
                                </div>
                                <div class="">
                                    <label for="radio-2" class="radio-label">female</label>
                                    <input type="radio" id="radio-2" name="gender" value="Female"  <%= user.gender == "Female" ? 'checked' : '' %> >
                                </div>
                            </td>



                            <td><input type="email" name="email" value="<%= user.email %>" placeholder="example@comp.com"></td>
                            <td><input type="text" name="password" value="<%= user.password %>" placeholder="write password"></td>
                            <td><%= user.isAdmin %></td>
                            <td>
                                <button type="submit" class="btn text-dark update">SAVE</button>
                            </td>
                            <td>
                                <button type="button" class="btn text-dark update"><a href="/api/carts/user_show_cart"><i class="fas fa-angle-double-left"></i>CART</a></button>
                            </td>
                            <td>
                                <button type="button" class="btn text-dark update"><a href="/api/orders/user_show_all_orders"><i class="fas fa-angle-double-left"></i>Orders</a></button>
                            </td>
                        </form>
                    </tr>
                </tbody>
            </table>




           
        </div>
    </main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->