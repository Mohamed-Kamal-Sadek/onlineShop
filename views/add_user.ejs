<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter"  >
               <a href="/"><i class="fas fa-angle-double-left"></i>home page</a>
           </div>
        </div>
        <div class="form-title text-center" >
            <h2 class="text-dark">add_user.ejs</h2>
            <h2 class="text-dark">Register</h2>
            <span class="text-light">Use the below form to create a new account</span>
        </div>
 <!-- form handling -->
 <form action="/api/auth/register" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="username" class="text-light">UserName</label>
            <input type="text" name="username" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="birthday" class="text-light">Birthday</label>
            <input type="date" name="birthday" value="" placeholder="birthday">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Mob.</label>
            <input type="tel" name="mobile" value="" placeholder="mobile">
        </div>
        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="address">
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="text" name="city" value="" placeholder="city">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="gender" value="Male">
                <label for="radio-1" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Female">
                <label for="radio-2" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">PassWord</label>
            <input type="text" name="password" value="" placeholder="write password">
        </div>
        <div class="form-group">
            <label for="isAdmin" class="text-light">isAdmin</label>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="isAdmin" value="false" >
                <label for="radio-3" class="radio-label">false</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="isAdmin" value="true" >
                <label for="radio-4" class="radio-label">true</label>
            </div>
            
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update" id="add_user">Save</button>
        </div>

    </div>
</form>
    </div>
</main>
<!-- /Main Site -->

