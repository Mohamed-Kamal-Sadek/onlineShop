<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>home page</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">admin_add_product.ejs</h2>
            <span class="text-light">Use the below form to add a new product</span>
        </div>

        <!-- uploadImage by admin -->
        <h4>uploadImage.ejs</h4>
        <form class="" method="POST" action="/api/upload"  id="" enctype="multipart/form-data">
            <input type="file" name="image">
            <input type="submit">
        </form>  


        <!-- form handling -->
 <form action="/api/products" method="POST" id="add_product">
    <div class="new_user">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <select id="" name="title">
                <option selected>Addidas</option>
                <option>Nike</option>
                <option>Puma</option>
                <option>Activ</option>
                <option>Bata</option>
            </select>
        </div>
        <div class="form-group">
            <label for="desc" class="text-light">Desc</label>
            <input type="text" name="desc" value="" placeholder="desc">
        </div>
        <div class="form-group">
            <label for="img" class="text-light">Img.</label>
            <input type="file" name="img" value="" placeholder="put image here">
        </div>
        <div class="form-group">
            <label for="categories" class="text-light">Categories</label>
            <input type="text" name="categories" value="" placeholder="categories">
        </div>
        <div class="form-group">
            <label for="size" class="text-light">Size</label>
            <input type="text" name="size" value="" placeholder="size">
        </div>
        <div class="form-group">
            <label for="color" class="text-light">Color</label>
            <input type="text" name="color" value="" placeholder="color">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="number" name="price" value="" placeholder="enter price here">
        </div>
        <div class="form-group">
            <label for="quantity" class="text-light">Quantity</label>
            <input type="number" name="quantity" value="" placeholder="enter quantity here">
        </div>
        <div class="form-group">
            <label for="enteredby" class="text-light">Entered By:</label>
            <td><%= enteredby %></td>
            <input type="hidden" name="enteredby" value="<%= enteredby %>" placeholder="">
        </div>

        <div class="form-group">
            <label for="active" class="text-light">Active??</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="active" value="false" >
                <label for="radio-1" class="radio-label">false</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="active" value="true" >
                <label for="radio-2" class="radio-label">true</label>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update" id="add_product">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->
<!-- include footer -->
<%- include('include/_footer') %>
